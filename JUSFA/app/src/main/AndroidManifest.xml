<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jusfa.jusfa" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <supports-screens android:resizeable="true"/>
    <supports-screens android:largeScreens="true"/>
    <supports-screens android:normalScreens="true"/>
    <supports-screens android:smallScreens="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!--Use this for fullscreen activity-->
        <!--"@style/Theme.AppCompat.Light.NoActionBar"-->

        <activity
            android:name=".DatabaseActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".NewUserActivity" android:screenOrientation="portrait"/>
        <activity android:name=".EmergencyActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ListShelterActivity" android:screenOrientation="portrait" />
        <activity android:name=".ListFirstAidActivity" android:screenOrientation="portrait" />
        <activity android:name=".ListFireActivity" android:screenOrientation="portrait" />
        <activity android:name=".ListFoodActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Fire1Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Fire2Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Fire3Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Fire4Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Fire5Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Food1Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Food2Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Food3Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Food4Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Food5Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Shelter1Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Shelter2Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Shelter3Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Shelter4Activity" android:screenOrientation="landscape"/>
        <activity android:name=".Shelter5Activity" android:screenOrientation="landscape"/>
        <activity android:name=".FirstAid1Activity" android:screenOrientation="landscape"/>
        <activity android:name=".FirstAid2Activity" android:screenOrientation="landscape"/>
        <activity android:name=".FirstAid3Activity" android:screenOrientation="landscape"/>
        <activity android:name=".FirstAid4Activity" android:screenOrientation="landscape"/>
        <activity android:name=".FirstAid5Activity" android:screenOrientation="landscape"/>

    </application>

</manifest>
