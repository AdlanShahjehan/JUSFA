<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/sos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_sos"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_setting"
        android:layout_alignBottom="@+id/sos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/fire"
        android:layout_above="@+id/food"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_fire"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/food"
        android:layout_above="@+id/shelter"
        android:layout_alignLeft="@+id/shelter"
        android:layout_alignStart="@+id/shelter"
        android:background="@drawable/btn_food"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/shelter"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_shelter"
        android:layout_alignLeft="@+id/fire"
        android:layout_alignStart="@+id/fire" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/firstaid"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_first"
        android:layout_below="@+id/shelter"
        android:layout_alignLeft="@+id/shelter"
        android:layout_alignStart="@+id/shelter" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/logout"
        android:background="@drawable/btn_logout"
        android:layout_above="@+id/sos"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/unlock"
        android:background="@drawable/btn_unlock"
        android:layout_alignTop="@+id/locked"
        android:layout_toRightOf="@+id/locked"
        android:layout_toEndOf="@+id/locked" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/locked"
        android:background="@drawable/btn_lock"
        android:layout_alignTop="@+id/setting"
        android:layout_toRightOf="@+id/sos"
        android:layout_toEndOf="@+id/sos" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="17dp"
        android:id="@+id/imageView"
        android:background="@drawable/emergency"
        android:layout_above="@+id/unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

</RelativeLayout>
